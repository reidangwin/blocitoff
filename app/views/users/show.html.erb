<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <div class="panel panel-default">
        <div class="panel-body bg-dark">
          <div class="row">
            <div class="col-md-12">
              <div class="row">
                <div class="col-md-offset-3 col-md-6">
                  <%= image_tag gravatar_url(@user.email, 300), alt:"profile image", class:"img-circle img-responsive center-block" %>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="row">
                <div class="col-sm-offset-3 col-sm-6">
                  <h2><%= @user.email %></h2>
                  <p><strong>Created: </strong> <%= @user.created_at %></p>
                  <p><strong>Last sign in: </strong> <%= @user.last_sign_in_at %></p>
                  <p><strong>Sign ins: </strong> <%= @user.sign_in_count %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="row">
            <div class="col-md-12">
              <div class="row">
                <div class="col-sm-12">
                  <h2 class="text-center">Todo list</h2>
                  <table class="table">
                    <form class="form-inline">
                      <%= render(@items) || "There is nothing in the todo list." %>
                  </table>
                  </form>
                </div>
              </div>
              <% if current_user == @user %>
              <div class="row">
                <div class="col-sm-12">
                  <%= render partial: '/items/form', locals: {item: Item.new } %>
                </div>
              </div>
              <% end %> 
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
