<tr>
  <td>
    <%= link_to "", user_item_path(item.user, item), method: :delete, data: { confirm: "Remove \"#{item.name}\". Are you sure?" }, remote: true, class:'delete-item glyphicon glyphicon-ok' %>
  </td>
  <td>
    <%= item.name %>
  </td>
  <td>
    <%= distance_of_time_in_words(Time.now, item.created_at+7.days) %>
  </td>
</tr>
